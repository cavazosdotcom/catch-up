{{!-- Basic login template --}}
<div class="card shadow">
  <h2 class="card-header bg-yellow text-dark">Login</h2>
  <div class="card-body">
    <form class="login-form">
      <div class="mt-3">
        <label for="email-login" class="form-label">email:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>
      <div class="mt-3">
        <label for="password-login" class="form-label">password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="mt-3">
        <button class="btn btn-style" type="submit">Log In</button>
        <button class="btn btn-style"><a class="btn-anchor" href="/register">Go Sign Up!</a></button>
      </div>
    </form>
    {{!-- <a href="/register">Or, sign up!</a> --}}
  </div>
</div>
<script src="/js/login.js"></script>